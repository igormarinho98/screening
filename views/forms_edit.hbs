<section class="card mt-5 mr-2 ml-2 ">
    <div class="card-title mx-auto mt-2">
        
    </div>
    <div class="card-title mt-1 ml-3">
        <i class="fas fa-3x fa-user-md"></i>
        <h3 class="display-4">Edit</h3>
    </div>
    

    <div class="card-body">

        <form action="/forms/{{data._id}}" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group"><input type="text" class="form-control" name="name" value="{{data.name}}" placeholder="name"></div>
        
        <div class="form-group"><input type="text" class="form-control" name="age" value="{{data.age}}" placeholder="age"></div>

        <div class="form-group"><input type="text" class="form-control" name="prognostic" value="{{data.prognostic}}" placeholder="prognostic"></div>

        <div class="form-group"><input type="text" class="form-control" name="medicament" value="{{data.medicament}}" placeholder="medicament"></div>

        <div class="form-group">
            <select name="sickness" class="form-control">
                {{#equals data.sickness 'YES'}}
                <option value="YES" selected>YES</option>
                <option value="NO">NO</option>
                {{/equals}}

                {{#equals data.sickness 'NO'}}
                <option value="NO" selected>NO</option>
                <option value="YES" >YES</option>
                {{/equals}}
            </select>

        </div>

        <button type="submit" class="btn btn-success">Save</button>
    </form>
    </div>

</section>